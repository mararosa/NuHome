<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/nu_card_purple"
                app:cardCornerRadius="21dp">

                <LinearLayout
                    android:id="@+id/containerPix"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_pix_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/icon_nu_pix" />

                    <TextView
                        android:id="@+id/tv_item_pix_description"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="30dp"
                        android:text="Fazer um Pix"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/nu_card_purple"
                app:cardCornerRadius="21dp">

                <LinearLayout
                    android:id="@+id/containerBoleto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_boleto_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/icon_nu_boleto" />

                    <TextView
                        android:id="@+id/tv_item_boleto_description"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center|bottom"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="16dp"
                        android:text="Pagar um
boleto"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/nu_card_purple"
                app:cardCornerRadius="21dp">

                <LinearLayout
                    android:id="@+id/containerDeposito"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_deposito_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/icon_nu_transfer" />

                    <TextView
                        android:id="@+id/tv_item_deposito_description"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="30dp"
                        android:text="Fazer um depÃ³sito"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/nu_card_purple"
                app:cardCornerRadius="21dp">

                <LinearLayout
                    android:id="@+id/containerEtc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_etc_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_nu_money" />

                    <TextView
                        android:id="@+id/tv_item_etc_description"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center|bottom"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="16dp"
                        android:text="FAQ"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
